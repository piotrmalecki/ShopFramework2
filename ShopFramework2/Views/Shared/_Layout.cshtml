<body>

            <div class="bs-component">
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("ShopFrameWork", "Index", "Home", null, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                { 
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin Area <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Orders", "Index", "Orders")</li>
                                            <li>@Html.ActionLink("Catagorie", "Index", "Catagories")</li>
                                            <li>@Html.ActionLink("Analytics", "Index", "Analytics")</li>
                                            <li class="divider"></li>
                                            <li class="dropdown-header">Roles Admin</li>
                                            <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                                            <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                                        </ul>
                                    </li>
                                }
                                <li>@Html.ActionLink("Food", "Index", "Items")</li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">About us <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("About", "About", "Home")</li>
                                        <li class="divider"></li>
                                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                    </ul>
                                </li>
                            </ul>
                            
                            @Html.Partial("_LoginPartial")
                           
                        </div>

                    </div>
                </div>
                <br />
                <br />
                <div class="container body-content">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; @DateTime.Now.Year - Shop Framework by <a class="githubLink" href="https://github.com/piotrmalecki">maly161</a></p>
                    </footer>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
